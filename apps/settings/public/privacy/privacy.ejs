<link rel="stylesheet" href="../privacy/privacy.css">
<script type="text/javascript" src="../privacy/privacy.js"></script>

<%- include('../sidebar/sidebar.ejs') %>

<div id="container">
    <div class="privacy-container">
        <h2>Privacy Settings</h2>

        <!-- Privacy Dropdown for Profile Visibility -->
        <div class="privacy-option">
            <label for="profilePrivacy">Who can view my profile and account:</label>
            <select id="profilePrivacy" class="privacy-dropdown">
                <option value="friends">Friends only</option>
                <option value="followers">Followers only</option>
                <option value="friends_followers">Friends and Followers</option>
                <option value="anybody">Discoverable to anybody</option>
            </select>
        </div>

        <!-- Privacy Dropdown for Events Attending -->
        <div class="privacy-option">
            <label for="eventsPrivacy">Who can view events I am attending:</label>
            <select id="eventsPrivacy" class="privacy-dropdown">
                <option value="friends">Friends only</option>
                <option value="followers">Followers only</option>
                <option value="friends_followers">Friends and Followers</option>
                <option value="anybody">Discoverable to anybody</option>
            </select>
        </div>

        <!-- Privacy Dropdown for Event Discovery -->
        <div class="privacy-option">
            <label for="discoverPrivacy">Who can discover and RSVP for my events:</label>
            <select id="discoverPrivacy" class="privacy-dropdown">
                <option value="friends">Friends only</option>
                <option value="followers">Followers only</option>
                <option value="friends_followers">Friends and Followers</option>
                <option value="anybody">Discoverable to anybody</option>
            </select>
        </div>

        <button type="button" id="savePrivacyButton" class="save-button">Save Changes</button>
    </div>
</div>
